
<div class="form-div">

<form action="/create-game" method="post" enctype='multipart/form-data' class="log-form">
<h2 class="form-title">Game details</h2>

<label for="title">
    Title:
    <input type="text" name="title" id="title">
</label>

<label for="genre">
    Genre:
    <input type="text" name="genre" id="genre">
</label>

<label for="publisher">
    Publisher:
    <input type="text" name="publisher" id="publisher">
</label>

<label for="title">
    Platform:
    <input type="text" name="platform" id="platform">
</label>

<label for="game_URL">
    Link:
    <input type="text" name="game_URL" id="link">
</label>


<label for="description">
    Description:
    <textarea name="description" id="description" cols="30" rows="10"></textarea>
</label>


<label for="image">
    Image:
    <input type="file" name="image" id="image-input">
</label>

<button type="submit" class="log-btn">Add Game</button>
</form>
</div>